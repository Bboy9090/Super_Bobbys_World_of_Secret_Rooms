# Super Bobby's World: Warp Zones - Environment Configuration
# Copy this file to .env and configure with your values

# Backend Configuration
NODE_ENV=development
PORT=3001

# Frontend Configuration
VITE_API_BASE=http://localhost:3001

# Security & Authorization
# CRITICAL: This key gates access to sensitive operations
# Set as GitHub Secret for CI/CD
POWER_STAR_KEY=your-secret-key-here-change-in-production

# Feature Flags (OFF by default - require explicit operator confirmation)
# EXPERIMENTAL_EDL_MODE=false
# EXPERIMENTAL_BOOTLOADER_ACCESS=false
# EXPERIMENTAL_DEVICE_UNLOCK=false

# Database (if needed for audit logs)
# DATABASE_URL=postgresql://user:password@localhost:5432/warp_zones

# Logging
LOG_LEVEL=info
AUDIT_LOG_PATH=./backend/logs/audit.log

# Device Safety
# Enable this ONLY in controlled lab environments
# ALLOW_DEVICE_OPERATIONS=false
