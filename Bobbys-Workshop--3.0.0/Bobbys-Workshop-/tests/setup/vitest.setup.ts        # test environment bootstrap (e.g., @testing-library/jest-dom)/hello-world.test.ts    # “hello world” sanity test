const { expect } = require('vitest');

global.someGlobalVariable = 'value';

expect.extend({
  toBeHelloWorld(received) {
    const pass = received === 'Hello World';
    if (pass) {
      return {
        message: () => `expected ${received} not to be Hello World`,
        pass: true,
      };
    } else {
      return {
        message: () => `expected ${received} to be Hello World`,
        pass: false,
      };
    }
  },
});

const { test } = require('vitest');

test('hello world', () => {
  expect('Hello World').toBeHelloWorld();
});