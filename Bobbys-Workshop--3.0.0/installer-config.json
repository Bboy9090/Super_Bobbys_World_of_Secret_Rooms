{
  "name": "pandora-codex-installer",
  "version": "1.0.0",
  "description": "Pandora Codex - Universal Device Management Platform",
  "scripts": {
    "build-installer": "powershell -ExecutionPolicy Bypass -File build-installer.ps1",
    "package-exe": "pkg . --targets node18-win-x64 --output dist-installer/PandoraCodex.exe",
    "create-portable": "npm run build && npm run package-exe"
  },
  "bin": {
    "pandora-codex": "server/index.js"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "server/**/*",
      "data/**/*",
      "node_modules/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist-installer"
  }
}
